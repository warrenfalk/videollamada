datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Room {
  id          String       @id
  createdAt   DateTime     @default(now())
  connections Connection[]
}

model Connection {
  id        Int      @id @default(autoincrement())
  cookie    String
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id])
  createdAt DateTime @default(now())

  @@unique([roomId, cookie])
}
